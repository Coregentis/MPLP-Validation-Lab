{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "equivalence-diff.schema.json",
    "title": "Equivalence Diff",
    "description": "Schema for diff files produced by compute-equivalence.ts per v0.10.2 spec",
    "type": "object",
    "required": [
        "scenario_family",
        "pair",
        "differences",
        "disclaimer"
    ],
    "properties": {
        "scenario_family": {
            "type": "string",
            "minLength": 1
        },
        "pair": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 2,
            "maxItems": 2
        },
        "differences": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "note_code",
                    "params"
                ],
                "properties": {
                    "note_code": {
                        "type": "string",
                        "enum": [
                            "MISSING_POINTER",
                            "VALUE_HASH_MISMATCH",
                            "CARDINALITY_MISMATCH",
                            "TYPE_MISMATCH",
                            "MISSING_ADMISSIBILITY_EVIDENCE",
                            "SCENARIO_FAMILY_MISMATCH"
                        ]
                    },
                    "params": {
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            }
        },
        "disclaimer": {
            "type": "string",
            "minLength": 50
        }
    }
}