{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Vector Manifest",
    "description": "Schema for individual test vector manifests",
    "type": "object",
    "required": [
        "vector_id",
        "domain",
        "expected_topline",
        "ruleset_ref",
        "protocol_pin"
    ],
    "properties": {
        "vector_id": {
            "type": "string",
            "description": "Unique identifier for this vector",
            "pattern": "^v05-[dD][1-4]-(pass|fail)-[a-z0-9-]+$"
        },
        "domain": {
            "type": "string",
            "enum": [
                "D1",
                "D2",
                "D3",
                "D4"
            ],
            "description": "Target domain for this vector"
        },
        "clause_targets": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^CL-D[1-4]-0[1-3]$"
            },
            "description": "Specific clauses this vector exercises"
        },
        "expected_topline": {
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "NOT_EVALUATED"
            ],
            "description": "Expected adjudication verdict"
        },
        "expected_reason_code": {
            "type": [
                "string",
                "null"
            ],
            "description": "Expected reason code (for FAIL vectors)"
        },
        "ruleset_ref": {
            "type": "string",
            "description": "Ruleset reference for adjudication",
            "default": "ruleset-1.2"
        },
        "protocol_pin": {
            "type": "string",
            "description": "Protocol version pin",
            "default": "2025-draft"
        },
        "schema_version": {
            "type": "string",
            "description": "Schema version for this vector"
        },
        "description": {
            "type": "string",
            "description": "Human-readable description of what this vector tests"
        },
        "source": {
            "type": "object",
            "properties": {
                "substrate": {
                    "type": "string",
                    "description": "Source substrate that produced this evidence"
                },
                "producer_version": {
                    "type": "string",
                    "description": "Version of the producer that created this"
                }
            }
        },
        "hash_scope": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Files included in verdict hash"
        }
    }
}